<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">

    <t t-name="my_history.Chatter" t-inherit="mail.Chatter" t-inherit-mode="extension">
         <xpath expr="//div[hasclass('o-mail-Chatter-topbar')]/div[hasclass('flex-grow-1')]/button[hasclass('o-mail-Chatter-activity')]"
                position="after">
             <button class="btn btn-link"
                     t-att-class="{ 'fa fa-lg fa-star o-mail-Message-starred':  this.state.favorite,'fa fa-lg fa-star': !this.state.favorite }"
                     t-on-click="onToggleFavorite"/>
        </xpath>
    </t>

</templates>
