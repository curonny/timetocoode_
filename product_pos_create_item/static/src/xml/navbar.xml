<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="product_pos_create_item.Navbar" t-inherit="point_of_sale.Navbar" t-inherit-mode="extension">
        <xpath expr="//div[hasclass('pos-rightheader')]/div[hasclass('navbar-button')]/ul/li/ul/li[hasclass('menu-item')]"
               position="before">
           <li class="menu-item navbar-button" t-on-click="onProductCreateButtonClick">
                <a class="dropdown-item py-2">
                   Create product
                </a>
           </li>
        </xpath>
    </t>
</templates>
