<templates>
    <div t-name="owl.EasyOrderProducts" owl="1">
        <div class="col-sm">
            <img t-att-src="`data:image/png;base64,${props.product.image_128}`" class="card-img-top"
                 t-att-alt="props.product.name"/>
            <div class="card">
                <div class="card-body">
                    <h3 class="card-title">
                        <t t-esc="props.product.name"/>
                    </h3>
                    <div class="row">
                        <div class="col-md-4">
                            <button class="btn btn-primary button-actions" t-on-click="addToCard">+</button>
                        </div>
                        <div class="col-md-4">
                            <button class="btn btn-primary button-actions" t-on-click="removeFromCard">-</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</templates>